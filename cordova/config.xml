<?xml version="1.0" encoding="utf-8" ?>
<widget android-packageName="com.appmasknow" ios-CFBundleIdentifier="com.appmasknow.ios" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
  <name>Masknow</name>
  <description>
    Aplicativo para vendas de mascaras.
  </description>
  <author email="dev.daeltondias@gmail.com" href="http://github.com/DaeltonDias">Daelton Dias</author>
  <content src="index.html" />
  <plugin name="cordova-plugin-whitelist" spec="1" />
  <access origin="*" />
  <allow-intent href="http://*/*" />
  <allow-intent href="https://*/*" />
  <allow-intent href="tel:*" />
  <allow-intent href="sms:*" />
  <allow-intent href="mailto:*" />
  <allow-intent href="geo:*" />
  <platform name="android">
    <allow-intent href="market:*" />
    <edit-config file="AndroidManifest.xml" target="/manifest/application/activity" mode="merge" xmlns:android="http://schemas.android.com/apk/res/android">
      <activity android:windowSoftInputMode="adjustPan" />
    </edit-config>
    <icon src="res/android/icon/ldpi.png" density="ldpi" />
    <icon src="res/android/icon/mdpi.png" density="mdpi" />
    <icon src="res/android/icon/hdpi.png" density="hdpi" />
    <icon src="res/android/icon/xhdpi.png" density="xhdpi" />
    <icon src="res/android/icon/xxhdpi.png" density="xxhdpi" />
    <icon src="res/android/icon/xxxhdpi.png" density="xxxhdpi" />
    <splash src="res/android/splash/port-ldpi.png" density="port-ldpi" />
    <splash src="res/android/splash/port-mdpi.png" density="port-mdpi" />
    <splash src="res/android/splash/port-hdpi.png" density="port-hdpi" />
    <splash src="res/android/splash/port-xhdpi.png" density="port-xhdpi" />
    <splash src="res/android/splash/port-xxhdpi.png" density="port-xxhdpi" />
    <splash src="res/android/splash/port-xxxhdpi.png" density="port-xxxhdpi" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="SplashShowOnlyFirstTime" value="false" />
  </platform>
  <platform name="ios">
    <allow-intent href="itms:*" />
    <allow-intent href="itms-apps:*" />
    <preference name="WKWebViewOnly" value="true" />
    <feature name="CDVWKWebViewEngine">
      <param name="ios-package" value="CDVWKWebViewEngine" />
    </feature>
    <preference name="CordovaWebViewEngine" value="CDVWKWebViewEngine" />
    <edit-config target="NSLocationWhenInUseUsageDescription" file="*-Info.plist" mode="merge">
      <string>Precisa de acesso ao local para encontrar coisas nas proximidades</string>
    </edit-config>
    <edit-config target="NSLocationAlwaysUsageDescription" file="*-Info.plist" mode="merge">
      <string>Precisa de acesso ao local para encontrar coisas nas proximidades</string>
    </edit-config>
    <edit-config target="NSCameraUsageDescription" file="*-Info.plist" mode="merge">
      <string>Precisa de acesso à câmera para tirar fotos</string>
    </edit-config>
    <edit-config target="NSPhotoLibraryUsageDescription" file="*-Info.plist" mode="merge">
      <string>Precisa de acesso à biblioteca de fotos para tirar fotos de lá</string>
    </edit-config>
    <edit-config target="NSPhotoLibraryAddUsageDescription" file="*-Info.plist" mode="merge">
      <string>Precisa de acesso à biblioteca de fotos para salvar as fotos</string>
    </edit-config>
    <preference name="CameraUsesGeolocation" value="false" />
    <icon src="res/ios/icon/180px.png" width="180" height="180" />
    <icon src="res/ios/icon/60px.png" width="60" height="60" />
    <icon src="res/ios/icon/120px.png" width="120" height="120" />
    <icon src="res/ios/icon/76px.png" width="76" height="76" />
    <icon src="res/ios/icon/152px.png" width="152" height="152" />
    <icon src="res/ios/icon/40px.png" width="40" height="40" />
    <icon src="res/ios/icon/80px.png" width="80" height="80" />
    <icon src="res/ios/icon/57px.png" width="57" height="57" />
    <icon src="res/ios/icon/114px.png" width="114" height="114" />
    <icon src="res/ios/icon/72px.png" width="72" height="72" />
    <icon src="res/ios/icon/144px.png" width="144" height="144" />
    <icon src="res/ios/icon/167px.png" width="167" height="167" />
    <icon src="res/ios/icon/29px.png" width="29" height="29" />
    <icon src="res/ios/icon/58px.png" width="58" height="58" />
    <icon src="res/ios/icon/87px.png" width="87" height="87" />
    <icon src="res/ios/icon/50px.png" width="50" height="50" />
    <icon src="res/ios/icon/100px.png" width="100" height="100" />
    <icon src="res/ios/icon/167px.png" width="167" height="167" />
    <splash src="res/ios/splash/port-iphone-default.png" width="320" height="480" />
    <splash src="res/ios/splash/port-iphone-4-4S.png" width="640" height="960" />
    <splash src="res/ios/splash/port-iphone-5-5S-SE.png" width="640" height="1136" />
    <splash src="res/ios/splash/port-ipad-default.png" width="768" height="1024" />
    <splash src="res/ios/splash/port-ipad-default-2x.png" width="1536" height="2048" />
    <splash src="res/ios/splash/port-iphone-6-6S-7.png" width="750" height="1334" />
    <splash src="res/ios/splash/port-iphone-6-6S-7-more.png" width="1242" height="2208" />
  </platform>
  <preference name="ShowSplashScreenSpinner" value="false" />
  <preference name="AutoHideSplashScreen" value="false" />
  <preference name="SplashScreenDelay" value="0" />
</widget>
