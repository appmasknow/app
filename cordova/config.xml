<?xml version='1.0' encoding='utf-8'?>
<widget id="com.appmasknow" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <!-- android-packageName="com.appmasknow.android" ios-CFBundleIdentifier="com.appmasknow.ios" -->
    <!-- android-packageName="com.appmasknow" ios-CFBundleIdentifier="com.appmasknow.apple" -->
    <name>Masknow</name>
    <description>
        Aplicativo para vendas de mascaras.
    </description>
    <author email="dev.daeltondias@gmail.com" href="http://github.com/DaeltonDias">
        Daelton Dias
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <!-- NÃ£o reduzir o WebView quando o teclado aparecer -->
        <edit-config file="AndroidManifest.xml" target="/manifest/application/activity" mode="merge" xmlns:android="http://schemas.android.com/apk/res/android">
            <activity android:windowSoftInputMode="adjustPan" />
        </edit-config>
        <!-- icon -->
        <icon src="res/android/icon/ldpi.png" density="ldpi" />
        <icon src="res/android/icon/mdpi.png" density="mdpi" />
        <icon src="res/android/icon/hdpi.png" density="hdpi" />
        <icon src="res/android/icon/xhdpi.png" density="xhdpi" />
        <icon src="res/android/icon/xxhdpi.png" density="xxhdpi" />
        <icon src="res/android/icon/xxxhdpi.png" density="xxxhdpi" />
        <!-- splash-screen -->
        <splash src="res/android/splash/port-ldpi.png" density="port-ldpi" />
        <splash src="res/android/splash/port-mdpi.png" density="port-mdpi" />
        <splash src="res/android/splash/port-hdpi.png" density="port-hdpi" />
        <splash src="res/android/splash/port-xhdpi.png" density="port-xhdpi" />
        <splash src="res/android/splash/port-xxhdpi.png" density="port-xxhdpi" />
        <splash src="res/android/splash/port-xxxhdpi.png" density="port-xxxhdpi" />
        <!-- splash-screen -->
        <preference name="SplashMaintainAspectRatio" value="true" />
        <preference name="SplashShowOnlyFirstTime" value="false" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <!-- icon -->
		<!-- iOS 8.0+ -->
		<!-- iPhone 6 Plus  -->
		<icon src="res/ios/icon/180px.png" width="180" height="180" />
		<!-- iOS 7.0+ -->
		<!-- iPhone / iPod Touch  -->
		<icon src="res/ios/icon/60px.png" width="60" height="60" />
		<icon src="res/ios/icon/120px.png" width="120" height="120" />
		<!-- iPad -->
		<icon src="res/ios/icon/76px.png" width="76" height="76" />
		<icon src="res/ios/icon/152px.png" width="152" height="152" />
		<!-- Spotlight Icon -->
		<icon src="res/ios/icon/40px.png" width="40" height="40" />
		<icon src="res/ios/icon/80px.png" width="80" height="80" />
		<!-- iOS 6.1 -->
		<!-- iPhone / iPod Touch -->
		<icon src="res/ios/icon/57px.png" width="57" height="57" />
		<icon src="res/ios/icon/114px.png" width="114" height="114" />
		<!-- iPad -->
		<icon src="res/ios/icon/72px.png" width="72" height="72" />
		<icon src="res/ios/icon/144px.png" width="144" height="144" />
		<!-- iPad Pro -->
		<icon src="res/ios/icon/167px.png" width="167" height="167" />
		<!-- iPhone Spotlight and Settings Icon -->
		<icon src="res/ios/icon/29px.png" width="29" height="29" />
		<icon src="res/ios/icon/58px.png" width="58" height="58" />
		<icon src="res/ios/icon/87px.png" width="87" height="87" />
		<!-- iPad Spotlight and Settings Icon -->
		<icon src="res/ios/icon/50px.png" width="50" height="50" />
		<icon src="res/ios/icon/100px.png" width="100" height="100" />
		<!-- iPad Pro -->
		<icon src="res/ios/icon/167px.png" width="167" height="167" />
        <!-- splash-screen -->
        <splash src="res/ios/splash/Default~iphone.png" width="320" height="480" />
        <splash src="res/ios/splash/Default@2x~iphone.png" width="640" height="960" />
        <splash src="res/ios/splash/Default-Portrait~ipad.png" width="768" height="1024" />
        <splash src="res/ios/splash/Default-Portrait@2x~ipad.png" width="1536" height="2048" />
        <splash src="res/ios/splash/Default-568h@2x~iphone.png" width="640" height="1136" />
        <splash src="res/ios/splash/Default-667h.png" width="750" height="1334" />
        <splash src="res/ios/splash/Default-736h.png" width="1242" height="2208" />
    </platform>
    <!-- splash-screen -->
    <preference name="ShowSplashScreenSpinner" value="false" />
    <preference name="AutoHideSplashScreen" value="false" />
    <preference name="SplashScreenDelay" value="0" />
</widget>

<!--
    icon tag
    ldpi    : 36 x 36 px
    mdpi    : 48 x 48 px
    hdpi    : 72 x 72 px
    xhdpi   : 96 x 96 px
    xxhdpi  : 144 x 144 px
    xxxhdpi : 192 x 192 px
    
    splash tag
    ldpi    : 200 x 320 px (Portrait)
    mdpi    : 320 x 480 px (Portrait)
    hdpi    : 480 x 800 px (Portrait)
    xhdpi   : 720 x 1280 px (Portrait)
    xxhdpi  : 960 x 1600 px (Portrait)
    xxxhdpi : 1280 x 1920 px (Portrait)
    
    icon origin
    site: https://img.icons8.com/plasticine/100/000000/
    id: protection-mask
-->
